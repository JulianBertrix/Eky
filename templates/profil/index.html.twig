{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <div class="container">
        <div class='conteneurMessagePoint offset-md-3 col-md-6'>
        <p class='messagePoint'>

            Bravo, vous avez cumulez {{ pointUser }} points, plus que <strong>{{100 - pointUser }}</strong> points !!! <br>
            Sachez que 100 points est égal à 10% chez nos commerçant partenaire

            <br>
            <button type='submit' id="buttonMessagePoint">OK</button>
        </p>
<br>
        </div>
<br>

        <div class="offset-md-3 col-md-6">
            <h4>Mettre à jour mes informations personnel :</h4>
            <br>
        <form>
            <div class="form-group">
                <label for="nom">Nom :</label>
                <input type="text" class="form-control" id="nom" >
            </div>
            <div class="form-group">
                <label for="prenom">Prenom :</label>
                <input type="text" class="form-control" id="prenom">
            </div>
            <div class="form-group">
                <label for="tel">Adresse :</label>
                <input type="tel" class="form-control" id="tel">
            </div>
            <div class="form-group">
                <label for="email">Email :</label>
                <input type="email" class="form-control" id="email">
            </div>
            <div class="form-group">
                <label for="adresse">Adresse :</label>
                <input type="text" class="form-control" id="adresse">
            </div>
            <div class="form-group">
                <label for="psw">Mot de passe :</label>
                <input type="password" class="form-control" id="psw">
            </div>
            <button type="submit" class="btn btn-primary my-1" style="float: right" >Mettre à jour</button>
        </form>
        </div>
    </div>




{% endblock %}


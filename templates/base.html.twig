<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Eky{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block navbar %}
            <nav class="navbar navbar-expand-lg navbar-dark my-nav position-fixed w-100" style="top: 0; z-index: 5500;">
                <div class="container font-weight-bold">
                    <a class="navbar-brand" href="#">
                        <img class="my-img invert" src="{{ asset('images/logo/logo.png') }}" alt="">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                            </li>
                            {% if app.session.get('role') is null %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('register') }}">Inscription/Connexion</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Mon profil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('logout') }}">DÃ©connection</a>
                                </li>
                                {% if app.session.get('role') is same as (1) %}
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Administration</a>
                                </li>
                                {% endif %}
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
        
    </body>
</html>
